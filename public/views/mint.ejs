    <div class="form-wrapper-one mintModalContent">
      <form class="row" action="#" id="mintForm-01">
        <div class="col-md-12">
          <div class="input-box pb--20">
            <div class="upload-area">

              <div class="upload-formate mb--30">
                <h6 class="title">
